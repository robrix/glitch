<h1>Repositories</h1>
<ul>
<%
@repos.each do |repo|
	head = repo.commits.first
%>
<li>
	<p><a href="/<%= escape repo.name %>"><%= repo.name %></a>, last updated <%= relative_time(repo.commits.first.date) %>:</p>
	<p><%= escape_html(repo.commits.first.message).gsub(/\n/, "<br>\n") %></p>
</li>
<%
end
%>
</ul>

<link rel="alternate" href="/index.xml" type="application/atom+xml" title="Repositories feed">